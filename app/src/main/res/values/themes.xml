<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tusena_Movil" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cajas_boton</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


<!--Para el inicio-->
    <style name="Sin_Header" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cajas_boton</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>



<!--    Activar modo oscuro :Fondo-->
    <style name="Fondo">
    <item name="android:background">#232A2E</item>
    </style>


<!--    Para el texto-->
    <style name="Textos">
        <item name="android:textColor">#FFFFFF</item>
    </style>

<!--    Botones color-->
    <style name="Boton">
        <item name="android:background">#55595A</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="fondo" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@drawable/fondos</item>
    </style>

<!--   Contenedor padre -->
    <style name="contenedor_preguntas">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">30dp</item>

    </style>
<!--    Intento para hacer lo de preguntas-->
    <style name="respuestas">
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/purple_700</item>
        <item name="android:textColor">@color/cajas_boton</item>
        <item name="android:layout_height">match_parent</item>
    </style>

<!--    Radiobuttons-->
<style name="radiobutons">
    <item name="android:buttonTint">@color/ic_launcher_background</item>


    <item name="android:textColor">@color/ic_launcher_background</item>
</style>
<!--    Para las preguntas-->
    <style name="preguntas">
        <item name="android:background">@drawable/contenedor_preguntas</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

<!--    Respuestas-->



</resources>