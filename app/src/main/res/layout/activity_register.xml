<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:animationCache="false"
        android:background="@drawable/img_5"
        android:orientation="vertical"

      >

        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:src="@drawable/logo2"
            />

    </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textSize="40sp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Nombres"
            app:boxCornerRadiusBottomEnd="50px"
            app:boxCornerRadiusBottomStart="50px"
            android:layout_marginTop="20dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
           >


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"

               />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:boxCornerRadiusBottomEnd="50px"
            app:boxCornerRadiusBottomStart="50px"
            android:hint="Apellidos"
            android:layout_marginTop="20dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">



            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
               />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
            app:boxCornerRadiusBottomEnd="50px"
            app:boxCornerRadiusBottomStart="50px"
        android:hint="Correo electronico"
        android:layout_marginTop="20dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">



        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
         />

    </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="350dp"
            app:boxCornerRadiusBottomEnd="50px"
            app:boxCornerRadiusBottomStart="50px"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Telefono"
            android:layout_marginTop="20dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            >



        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
            app:boxCornerRadiusBottomEnd="@dimen/material_emphasis_high_type"

            android:layout_height="wrap_content"
                android:inputType="number"
           />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â¿Nesecitas Ayuda?"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:textColorLink="@color/purple_700"/>
        <Button
            android:layout_width="190dp"
            android:layout_height="70dp"
            android:text="Login"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:onClick="login"
            android:backgroundTint="@color/color_boton"/>




</LinearLayout>