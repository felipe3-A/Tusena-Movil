<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:animationCache="false"
        android:padding="20dp"
        android:background="@drawable/img_5"
        android:orientation="vertical">

        <ImageView
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:src="@drawable/logo2"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="40sp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Usuario"
        app:startIconDrawable="@drawable/baseline_person_24"
        app:boxCornerRadiusBottomEnd="50px"
        app:boxCornerRadiusBottomStart="50px"
        android:layout_marginTop="20dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        >


        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"

            />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:startIconDrawable="@drawable/baseline_password_24"
        app:boxCornerRadiusBottomEnd="50px"
        app:boxCornerRadiusBottomStart="50px"
        android:hint="Contrase単a"
        android:layout_marginTop="35dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">



        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            />

    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="多Olvidaste tu contrase単a?"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:textSize="15dp"
       />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="多No tienes cuenta aun?"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:textSize="15dp"
        />

    <Button
        android:layout_width="190dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:onClick="Menu"
        android:text="Login"
        android:textSize="20dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/color_boton"
        app:cornerRadius="20dp"
      />

</LinearLayout>