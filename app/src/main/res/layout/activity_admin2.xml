<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Admin">

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registro_de_investigadores1"
        android:textStyle="bold"
        android:textSize="17sp" />



    <EditText
        android:layout_marginTop="40dp"
        android:id="@+id/edtx_investigador"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="@string/investigador"
        android:layout_gravity="center"
        android:textSize="20sp" />
    <EditText
        android:layout_marginTop="40dp"
        android:id="@+id/edtx_identificacion"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="@string/identificaci_n"
        android:layout_gravity="center"
        android:textSize="20sp" />


    <EditText
        android:layout_marginTop="40dp"
        android:id="@+id/edtx_nombre_proyecto"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="@string/nombre_de_proyecto"
        android:layout_gravity="center"
        android:textSize="20sp" />

    <EditText
        android:layout_marginTop="40dp"
        android:id="@+id/edtx_n_producto"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="@string/producto"
        android:layout_gravity="center"
        android:textSize="20sp" />
    <EditText
        android:layout_marginTop="40dp"
        android:id="@+id/edtx_tipo_proyecto"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="@string/tipo_codigo_de_proyecto"
        android:layout_gravity="center"
        android:textSize="20sp" />
    <EditText
        android:layout_marginTop="40dp"
        android:id="@+id/edtx_numeroproyecto"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="@string/n_mero_del_proyecto"
        android:layout_gravity="center"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_agregarinvestigador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AGREGAR"
        android:layout_marginTop="20dp"
        />



</LinearLayout>