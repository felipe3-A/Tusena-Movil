<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondos"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Bienvenido a Tusena!"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="25sp"

 />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:src="@drawable/logo2"
        android:layout_marginTop="20dp"
/>
    <TextView
        android:layout_width="350dp"
        android:textAlignment="center"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif"
        android:text="¿Por donde quieres empezar?"
/>



       <Button
           android:fontFamily="sans-serif"
           android:id="@+id/Boton1"
           android:layout_width="230dp"
           android:layout_height="69dp"
           android:layout_gravity="center"
           android:onClick="guia1"
           android:textSize="19sp"
           android:text="¿Como uso la aplicacion?"
           android:layout_marginTop="20dp"
           />
       <Button
           android:id="@+id/Boton2"
           android:layout_width="230dp"
           android:layout_height="55dp"
           android:layout_gravity="center"
           android:text="Registrarme"
           android:textSize="19sp"
           android:fontFamily="sans-serif"
           android:backgroundTint="@color/boton1"
           android:onClick="Registro"
           android:layout_marginTop="20dp"
           />
    <Button
        android:id="@+id/Boton3"
        android:layout_width="230dp"
        android:textSize="19sp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:fontFamily="sans-serif"
        android:text="Ir al login"
        android:backgroundTint="@color/boton2"
        android:onClick="login"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="350dp"
        android:textAlignment="center"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif"
        android:text="*Te recomendamos iniciar con la primera opcion para que conoscas la funcionabilidad de nuestra aplicacion"
        />

</LinearLayout>